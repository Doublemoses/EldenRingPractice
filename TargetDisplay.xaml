<Window x:Class="EldenRingPractice.TargetDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EldenRingPractice"
        mc:Ignorable="d"
        Title="Target Display" Height="353" Width="220" ResizeMode="NoResize" Topmost="True">
    <Grid HorizontalAlignment="Center" Width="220">
        <Label Content="HP" HorizontalAlignment="Left" Margin="6,-2,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="26" Width="26" RenderTransformOrigin="0.986,0.411"/>
        <ProgressBar x:Name="barHP" HorizontalAlignment="Center" Height="5" Margin="0,19,0,0" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FF920000" Value="80"/>
        <TextBlock x:Name="textHP" HorizontalAlignment="Left" Margin="60,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <ProgressBar x:Name="barPoise" HorizontalAlignment="Center" Height="5" Margin="0,45,0,0" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FFF3D400" Value="80"/>
        <TextBlock x:Name="textPoise" HorizontalAlignment="Left" Margin="60,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Language="en-au" Text="Poise"/></TextBlock>
        <ProgressBar x:Name="barBleed" HorizontalAlignment="Center" Height="5" Margin="0,71,0,0" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FF9C0000" Value="80"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Language="en-au" Text="Bleed"/></TextBlock>
        <TextBlock x:Name="textBleed" HorizontalAlignment="Left" Margin="60,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <ProgressBar x:Name="barFrost" HorizontalAlignment="Center" Height="5" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FF0079FF" Value="80" Margin="0,96,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="0.418,-0.507"><Run Language="en-au" Text="Frost"/></TextBlock>
        <TextBlock x:Name="textFrost" HorizontalAlignment="Left" Margin="60,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <ProgressBar x:Name="barRot" HorizontalAlignment="Center" Height="5" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FFC7046F" Value="80" Margin="0,123,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Language="en-au" Text="Scarlet Rot"/></TextBlock>
        <TextBlock x:Name="textRot" HorizontalAlignment="Left" Margin="60,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <ProgressBar x:Name="barPoison" HorizontalAlignment="Center" Height="5" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FF48C704" Value="80" Margin="0,149,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Language="en-au" Text="Poison"/></TextBlock>
        <TextBlock x:Name="textPoison" HorizontalAlignment="Left" Margin="60,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <ProgressBar x:Name="barSleep" HorizontalAlignment="Center" Height="5" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FF7400C8" Value="80" Margin="0,175,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Language="en-au" Text="Sleep"/></TextBlock>
        <TextBlock x:Name="textSleep" HorizontalAlignment="Left" Margin="60,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <TextBlock x:Name="textCurrentAnimation" HorizontalAlignment="Left" Margin="10,236,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Text="Death"/><Run Language="en-au" Text=" Blight"/></TextBlock>
        <ProgressBar x:Name="barBlight" HorizontalAlignment="Center" Height="5" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="Black" Value="80" Margin="0,201,0,0"/>
        <TextBlock x:Name="textBlight" HorizontalAlignment="Left" Margin="60,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold"><Run Language="en-au" Text="Madness"/></TextBlock>
        <ProgressBar x:Name="barMadness" HorizontalAlignment="Center" Height="5" VerticalAlignment="Top" Width="200" Background="#FF656565" Foreground="#FFFF6900" Value="80" Margin="0,226,0,0"/>
        <TextBlock x:Name="textMadness" HorizontalAlignment="Left" Margin="60,211,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Text="79/9999" Width="150"/>

    </Grid>
</Window>
